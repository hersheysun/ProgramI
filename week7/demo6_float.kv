FloatLayout:
    Button:
        size_hint: (None, None) # force absolute size
        size: (40,20)
        pos: (0,0)
        text: '1'
    Button:
        size_hint: (None, None)
        size: (20,40)
        pos: (30,300)
        text: '2'
    Button:
        size_hint: (0.1,0.1) # use relative size and position
        pos_hint: {'x': 0.5, 'y': 0.5}
        text: '3'

